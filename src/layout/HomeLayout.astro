---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Layout from "./Layout.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout>
    <section>
        <div
            class="flex flex-col md:flex-row justify-center items-center p-5 h-full"
        >
            <div
                class="order-1 w-full md:order-2 flex justify-center items-center"
            >
                <img
                    src="/me.png"
                    class="drop-shadow-md w-[50%] lg:w-[70%] main-image"
                    alt="Crhistian Beteta"
                />
            </div>

            <div
                class="order-2 w-full md:order-1 flex flex-col justify-center items-center"
            >
                <h1
                    class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl dark:text-white"
                >
                    Crhistian Beteta
                </h1>
                <p
                    class="max-w-2xl mb-6 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400"
                >
                    {t("home.computer_engineer")}
                </p>
            </div>
        </div>
    </section>
</Layout>

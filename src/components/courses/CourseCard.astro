---
interface Props {
    title: string;
    skillsLearned: string[];
}

const { title, skillsLearned } = Astro.props;
---

<div
    class="block w-full p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700"
>
    <h5
        class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
    >
        {title}
    </h5>

    {
        skillsLearned.map((s) => (
            <span class="bg-gray-100 text-gray-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded-full dark:bg-gray-700 dark:text-gray-300">
                {s}
            </span>
        ))
    }
</div>
